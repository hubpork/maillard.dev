---
import HeaderLink from './HeaderLink.astro';
import { SITE_DESCRIPTION } from '../consts';
const { headerClass, headerDotClass, headerFixClass, title } = Astro.props;
---

<header class:list={[ headerClass ]} data-fix={headerFixClass}>
	<div class="flex flex-col md:flex-row items-center md:justify-between mx-auto header-max-width">

		<HeaderLink href="/" class="mb-4 md:mb-0 mt-[-5px]" title={title}>
			<div class="text-5xl md:text-4xl xl:text-5xl font-headingFont">maillard<span class:list={[ headerDotClass ]}>.</span>dev</div>
			<div class="text-center md:text-right text-base font-leadFont">{SITE_DESCRIPTION}</div>
		</HeaderLink>

		<nav class="nav flex gap-3 lg:gap-6 text-xl lg:text-2xl mb-4 md:mb-0 font-headingFont">
			<HeaderLink href="/blog">Insights</HeaderLink>
			<HeaderLink href="/about">My Journey</HeaderLink>
		</nav>
	
	</div>
</header>


<style>
	.header {
		--color-fog-700: hsl(0, 0%, 40%);
	}

	a {
		display: inline-block;
		text-decoration: none;
	}
	a:hover {
		opacity: 0.7;
	}
	.nav > a.active {
		color: var(--color-fog-700);
	}
</style>